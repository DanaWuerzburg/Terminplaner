<!DOCTYPE html>
<html>
<head>
  <title>Terminplaner -Login </title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>



  <!-- Modernizr -->
	<script src="js/modernizr-1.5.min.js"></script>
	<!-- Webforms2 -->
	<script src="webforms2/webforms2-p.js"></script>
	<!-- Demo page layout -->
	<script src="/HTML5-Crossbrowser/js/html5forms.js"></script>
	<script src="/HTML5-Crossbrowser/js/html5forms.fallback.js"></script>

</head>
<body>

   <div id="nav">
        <% if current_user %>
        <!-- Username ist gespeichert in @user.login -->
        <p>Hello <%= current_user.id  %></p>
        <%= link_to " My Account ",  user_path(current_user.id) %>
        <%= link_to " Logout ", :logout%>
        <% else %>
        <%= link_to " Register ", new_user_path%> |
        <%= link_to " Login ", :login %>
        <% end %>
    </div>



<%= yield %>
</div>
</body>
</html>
