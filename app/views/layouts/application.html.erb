<!DOCTYPE html>
<html>
<head>
  <title>Terminplaner</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <script type="text/javascript" src="/javascripts/jscolor/jscolor.js"></script>
  <link type="text/css" href="css/smoothness/jquery-ui-1.8.17.custom.css" rel="stylesheet" />
		<script type="text/javascript" src="js/jquery-1.7.1.min.js"></script>
		<script type="text/javascript" src="js/jquery-ui-1.8.17.custom.min.js"></script>
		<script type="text/javascript">
			$(function(){

				// Datetimepicker

                $('#appointment_date').datetimepicker(
                {firstDay: 1,
                dateFormat: 'dd.mm.yy',
	            timeFormat: 'hh:mm',
	            stepMinute: 15});

                $( "#priority_number" ).slider(
                {max: 5,
                min: 1,
                animate: true,
                value: 3});

                var availableTags = [
                    "ActionScript",
                    "AppleScript",
                    "Asp",
                    "BASIC",
                    "C",
                    "C++",
                    "Clojure",
                    "COBOL",
                    "ColdFusion",
                    "Erlang",
                    "Fortran",
                    "Groovy",
                    "Haskell",
                    "Java",
                    "JavaScript",
                    "Lisp",
                    "Perl",
                    "PHP",
                    "Python",
                    "Ruby",
                    "Scala",
                    "Scheme"
                ];
                $( "#search_field" ).autocomplete({
                    source: availableTags
                });

			});
		</script>

</head>
<body>
    <div id="wrap" >
        <%= yield %>
        <footer>
         <%= link_to "MOBILE SITE", :controller => "application", :action => "set_layout", :mobile => "1" %>
        </footer>
    </div>

</body>

</html>
