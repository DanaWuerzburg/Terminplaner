<%= form_for(@user_session) do |f| %>


  <div class="field">
    <h4>Login</h4>
    <label class="label" ></label>
    <%= f.label "Username", class: 'label' %>
    <%= f.text_field :login, class: 'textarea' %>

    <%= f.label :password, class: 'label' %>
    <%= f.password_field :password, class: 'textarea' %>
    <div><%= link_to "Forgot Password?", :id => 'forgetpw_link' %></div>
    <span class="buttonsfloat">
         <%= f.submit '', :class=> 'button save', :title=>'New Group' %>
      </span>

  </div>

<% end %>
