

    <h1>Change <%= @user.login %>'s Password</h1>

    <p>
       Fill out the form below and instructions to reset your password will be emailed to you:

    </p>

    <%= form_for @user do |f| %>


      <div class="field">
        <label class="label" >Password</label>
        <%= f.password_field :password, :class=>"textarea" %>

          <label class="label" >Password (confirm)</label>
          <%= f.password_field :password_confirmation, :class=>"textarea" %>

          <span class="floatright">
            <%= f.submit '',:url => password_reset_path, :method => :put , :class=> 'button create', :title=>'Save new Password' %>
          </span>
      </div>
    <% end %>

