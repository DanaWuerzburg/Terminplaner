
<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
   <label class="label" >Username</label>
    <%= f.text_field :login, :class=>"textarea" %>

   <label class="label" >Email</label>
    <%= f.text_field :email, :class=>"textarea" %>


    <!-- ADMINFIELD  -->


    <% if current_user %>
           <% if current_user.admin? %>

               <label class="label" >Admin</label>
                <%=  f.text_field :admin, :class=>"textarea" %>



               <label class="label" >Activated</label>
                <%=  f.text_field :active, :class=>"textarea" %>


          <% end %>
    <% end %>

     <!-- Adminfield ende -->


    <label class="label" >Password</label>
    <%= f.password_field :password, :class=>"textarea" %>

      <label class="label" >Password (confirm)</label>
      <%= f.password_field :password_confirmation, :class=>"textarea" %>
  </div>
  <div class="actions">
    <%= f.submit '', :class=> 'button create', :title=>'Save Account' %>

  </div>
<% end %>





