<header>

  <div id="navbar">

    <div class="navleft">
      <ul>
       <% if current_user %>
          <li><h1><%= current_user.login %>'s Agenda</h1></li>
       <% else %>
          <li><h1>Agenda </h1></li>
       <% end %>
      </ul>
    </div>
    <div class="navright">

        <% if current_user %>
            <a id="btSettings" class='button settings' src="hideNote" type="text/javascript" language="JavaScript" onClick="FadeContent('settingsPanel'); return true;" href="#" title="Settings"></a>
            <% if current_user.admin? %>
              <%= link_to '',  users_path, :class=> 'button users left', :alt => 'Users', :title => 'Users' %>
            <% end %>

            <%= link_to '',  friendships_path, :class=> 'button users middle', :alt => 'Friends', :title => 'Friends' %>
            <%= link_to '',  user_path(current_user.id), :class=> 'button userinfo middle', :alt => 'My Account', :title => 'My Account', :name => 'My Account' %>
            <%= link_to '', :logout, :class=> 'button logout right', :alt => 'Logout', :title => 'Logout'%>
        <% else %>

            <%= link_to "", new_user_path, :class=> 'button useradd left', :alt => 'Register', :title => 'Register'%>
            <%= link_to "", :login, :class=> 'button login right', :alt => 'Login', :title => 'Login' %>
        <% end %>
    </div>
  </div>
   <% if current_user %>
    <div id="Settings">
        <% @groups.each do |group| %>
          <%= render :partial => 'groups/editallgroups', :locals => {:meinevariable => group} %>
        <% end %>
	    <%= render :partial => "groups/form" %><div id="groups">


    </div>
   <% end %>
</div>
</header>