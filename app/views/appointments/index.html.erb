
<header>
  <div id="navbar">

  </div>
</header>
<div id="cont">
<section class="appointments">
   <h1>Agenda   </h1>
  <section class="notify">
  <%= flash[:notice] %>
    </section>
<table>
  <thead class="thead">
  <tr>
    <th><%= sortable "date" %></th>
    <th>Note</th>

    <th><%= sortable "priority_number","Priority" %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  </thead>
<% @appointments.each do |appointment| %>
  <tbody>
    <tr>
    <td><%= appointment.date.strftime('%d.%m.%y %H:%M') %></td>
    <td><%= appointment.note %></td>
    <td><%= appointment.priority_number %></td>
    <td style="width:150px;"><%= link_to 'Edit', edit_appointment_path(appointment), class: 'button left' %><%= link_to 'Delete', appointment, confirm: 'Are you sure?', method: :delete, class: 'button right' %></td>
    </tr>

  </tbody>
<% end %>

</table>
</section>






<section class="newappointment">
<h1>New Appointment!!!</h1>
