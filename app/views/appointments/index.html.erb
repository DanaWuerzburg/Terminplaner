
<header>
  <div id="navbar">
    <ul>


      <li><input type='button' class="button logout" onclick="" name="Logout" title="Logout" /></li>
      <li>Today is <%= Time.now.strftime("%A")%> the  <%= Time.now.strftime('%d.%m.%y')%></li>
      <li>Hello  <%= current_user.login %>   !    <br>            </li>     <!-- Username ist gespeichert in @user.login -->
    </ul>
  </div>
</header>
<div id="cont">
<section class="appointments">
   <h1>Agenda   </h1>
  <section class="notify">
  <%= flash[:notice] %>
    </section>
<table class="pretty">
  <thead>
    <th></th>
    <th><%= sortable "date" %></th>
    <th><%= sortable "note","Note" %></th>
    <th><%= sortable "priority_number","Priority" %></th>
    <th></th>

  </thead>
  <tbody>
<% @appointments.each do |appointment| %>

    <tr>
    <td class="group <%=appointment.group  %>"></td>
    <td><%= appointment.date.strftime('%d.%m.%y %H:%M') %></td>
    <td><%= appointment.note %></td>
    <td><%= appointment.priority_number %></td>
    <td class="tdtools">
      <%= link_to '', edit_appointment_path(appointment), class: 'button left edit', title: 'Edit Appointment'  %>
      <%= link_to '', appointment, confirm: 'Are you sure?', method: :delete, class: 'button right delete', title: 'Delete Appointment' %>
    </td>
  </tr>
<% end %>
    </tbody>
</table>
</section>






<section class="newappointment">
<h1>New Appointment</h1>
   <div class="formular">

        <%= render 'form' %>
</div>
</section>
</div>
<footer>

</footer>
