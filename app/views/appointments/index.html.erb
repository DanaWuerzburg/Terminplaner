
<header>
  <div id="navbar">

  </div>
</header>
<div id="cont">
<section class="appointments">
   <h1>Agenda   </h1>
  <section class="notify">
  <%= flash[:notice] %>
    </section>
<table>
  <tr>
    <th><%= sortable "date" %></th>
    <th>Note</th>
    <th><%= sortable "priority_number","Priority" %></th>
    <th></th>

  </tr>
<% @appointments.each do |appointment| %>

    <tr>
    <td><%= appointment.date.strftime('%d.%m.%y %H:%M') %></td>
    <td class="note"><%= appointment.note %></td>
    <td><%= appointment.priority_number %></td>
    <td class="tdtools">
      <%= link_to 'Edit', edit_appointment_path(appointment), class: 'button left edit' %>
      <%= link_to 'Delete', appointment, confirm: 'Are you sure?', method: :delete, class: 'button right delete' %>
    </td>
    </tr>
<% end %>

</table>
</section>






<section class="newappointment">
<h1>New Appointment</h1>
   <div class="formular">

        <%= render 'form' %>
</div>
</section>
</div>
<footer>

</footer>
