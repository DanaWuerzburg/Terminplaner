
<header>
  <div id="navbar">
    <ul>
      <li><input type='button' class="button logout" onclick="" value="Logout" name="Logout" /></li>
    </ul>
  </div>
</header>
<div id="cont">
<section class="appointments">
   <h1>Agenda   </h1>
  <section class="notify">
  <%= flash[:notice] %>
    </section>
<table class="pretty">
  <thead>
    <th><%= sortable "date" %></th>
    <th><%= sortable "note","Note" %></th>
    <th><%= sortable "priority_number","Priority" %></th>
    <th><%= sortable "group","Group" %></th>
    <th></th>

  </thead>
  <tbody>
<% @appointments.each do |appointment| %>

    <tr>
    <td><%= appointment.date.strftime('%d.%m.%y %H:%M') %></td>
    <td><%= appointment.note %></td>
    <td><%= appointment.priority_number %></td>
    <td><%= appointment.group %></td>
    <td class="tdtools">
      <%= link_to 'Edit', edit_appointment_path(appointment), class: 'button left edit' %>
      <%= link_to 'Delete', appointment, confirm: 'Are you sure?', method: :delete, class: 'button right delete' %>
    </td>
  </tr>
<% end %>
    </tbody>
</table>
</section>






<section class="newappointment">
<h1>New Appointment</h1>
   <div class="formular">

        <%= render 'form' %>
</div>
</section>
</div>
<footer>

</footer>
