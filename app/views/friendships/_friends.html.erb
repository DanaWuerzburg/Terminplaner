<%= form_tag friendships_path do %>

        <% unless current_user.friends.empty? %>
            <% current_user.friends.each do |u| %>
                <%= link_to u.login, user_path(u.id) %>
                 <!-- Since <%#= u.created_at.to_s(:long) %>  -->

                 <%= link_to '[Remove]', friendship_path(:user_id => current_user, :id => u), :method => :delete, :confirm => 'Are you sure?' %>

            <% end %>
        <% else %>
            None
        <% end %>

<% end %>
