<%= render 'friendships/nav' %>
<h1>Find a new Friend! </h1>


<p id="notice"><%= notice %></p>
<table>
  <tr>

    <th>Username</th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>

    <% # comments %>

    <td><%= user.login %></td>
