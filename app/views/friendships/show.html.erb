<%= render 'friendships/nav' %>
<h1>Find a new Friend! </h1>


<p id="notice"><%= notice %></p>
<table>
  <tr>

    <th>Username</th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>

    <% unless user== current_user %>

        <td><%= user.login %></td>
        <td><%= link_to "Add Friend", friendships_path(:friend_id => user), :method => :post %>  </td>
    <%end%>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Back', friendships_path %>
