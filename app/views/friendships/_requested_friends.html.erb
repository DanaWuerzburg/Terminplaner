
<%= form_tag friendships_path do %>

        <% unless current_user.requested_friends.empty? %>
            <% current_user.requested_friends.each do |u| %>
                <ul>
                     <%= link_to u.login, user_path(u.id) %>
                    <!--Since <%#= u.created_at.to_s(:long) %> -->

                    <%= link_to '[Cancel]', friendship_path(:user_id => current_user, :id => u), :method => :delete, :confirm => 'Are you sure?' %>
                </ul>
            <% end %>
        <% else %>
        None
        <% end %>

<% end %>