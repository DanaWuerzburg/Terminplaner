
<%= form_tag friendships_path do %>

        <% unless current_user.pending_friends.empty? %>
            <% current_user.pending_friends.each do |u| %>
                <ul>
                    <%= link_to u.login, user_path(u.id) %>
                    <!-- Since <%#= u.created_at.to_s(:long) %>  -->

                    <%= link_to '[Accept]', friendship_path(:user_id => current_user, :id => u), :method => :put, :confirm => 'Accept friend request! Are you sure?' %> |
                    <%= link_to '', friendship_path(:user_id => current_user, :id => u), :method => :delete, confirm: 'Your are about to reject a friendsrequest! Are you sure?',  class: 'button right delete', title: 'Delete Friend'  %>
                </ul>
            <% end %>
        <% else %>
            None
        <% end %>

<% end %>