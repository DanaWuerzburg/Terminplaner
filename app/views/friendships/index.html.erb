<h1>My Friends</h1>

<table>
  <tr>
    <th>User</th>
    <th>Friend</th>
    <th>Status</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @friendships.each do |friendship| %>
  <tr>
    <td><%= friendship.user_id %></td>
    <td><%= friendship.friend_id %></td>
    <td><%= friendship.status %></td>
    <td><%= link_to 'Show', friendship %></td>
    <td><%= link_to 'Edit', edit_friendship_path(friendship) %></td>
    <td><%= link_to 'Destroy', friendship, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Friendship', new_friendship_path %>

<% for user in @users %>
  <div class="user">
    <p>
      <strong><%=h user.login %></strong>
      <%= link_to "Add Friend", friendships_path(:friend_id => user), :method => :post %>
      <div class="clear"></div>
    </p>
  </div>
<% end %>
